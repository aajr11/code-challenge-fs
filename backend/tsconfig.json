{
    "compilerOptions": {
        "module": "CommonJS",
        "target": "ES6",
        "moduleResolution": "Node",
        "outDir": "./dist",
        "rootDir": "./src",    
        "baseUrl": ".", 
        "paths": {
            "@prisma/client": ["generated/prisma"]
        },
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "resolveJsonModule": true
    },
    "include": [
        "src",
        "generated"
    ],
    "exclude": [
        "node_modules",
        "dist",
        "test"
    ]
}